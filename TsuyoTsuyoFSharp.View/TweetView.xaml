<UserControl 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="100" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserResizeRows="False"
                  CanUserResizeColumns="False" CanUserAddRows="False" CanUserSortColumns="False" HeadersVisibility="None"
                  HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
            <DataGrid.Columns>
                <DataGridTemplateColumn IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Image, UpdateSourceTrigger=PropertyChanged}" Height="34" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Text, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="600" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
